<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	<select id="getUserById" parameterType="String" resultType="com.springMybatis.pojo.User">
		select id,
			   name,
			   phone,
			   sex,
			   account
		from s_user
		where id = #{id1}
	</select>

	<select id="queryUsersByName" parameterType="String" resultType="com.springMybatis.pojo.User">
		select id, name, account
		from s_user
		where name like '%${value}%'
	</select>

	<insert id="addUser" parameterType="com.springMybatis.pojo.User">

		<!--	插入后将上次ID设置到对象中 只用于自增值
		<selectKey keyProperty="id" resultType="java.lang.Integer" order="AFTER">-->
		<!--		select LAST_INSERT_ID()-->
		<!--	</selectKey>-->
		<selectKey keyProperty="id" resultType="String" order="BEFORE">
			select UUID()
		</selectKey>
		INSERT s_user (id, name, account) VALUES (#{id}, #{name}, #{account});
	</insert>

	<delete id="delUser" parameterType="String">
		delete
		from s_user
		where id = #{id}
	</delete>

	<!--<select id="test">-->
	<!--	select * from s_user su inner join t_usr_info tui on su.id = tui.usr_id-->
	<!--</select>-->
</mapper>
